<resources>
    <!-- Tema principal de la aplicación -->
    <style name="Theme.AdvancedChatBot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Colores de fondo y superficie -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Colores de texto y acento -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:colorHint">@color/colorHint</item>

        <!-- Estilos de iconos -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>

        <!-- Estilo global de botones -->
        <item name="buttonStyle">@style/Widget.AdvancedChatBot.Button</item>
    </style>

    <!-- Tema oscuro para la aplicación -->
    <style name="Theme.AdvancedChatBot.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores específicos del tema oscuro -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="colorSurface">@color/colorBackground</item>
        <item name="colorOnSurface">@color/colorOnBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:colorHint">@color/colorHint</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="Widget.AdvancedChatBot.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="Widget.AdvancedChatBot.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:strokeColor">@color/colorSecondaryVariant</item>
        <item name="android:strokeWidth">2dp</item>
    </style>

    <!-- Estilo para TextView en burbujas de chat -->
    <style name="Widget.AdvancedChatBot.ChatBubble.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/chatBubbleTextColor</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Estilo de entrada de texto personalizado -->
    <style name="Widget.AdvancedChatBot.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:hintTextColor">@color/colorHint</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Estilo de ícono para botones de acción flotante (FAB) -->
    <style name="Widget.AdvancedChatBot.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Estilo de división entre elementos -->
    <style name="Widget.AdvancedChatBot.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>
</resources>